version: '2.1'

services:
  prometheus:
    image: 'prom/prometheus'
    volumes:
      - /var/server/conf/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml
      - /var/server/conf/prometheus/data:/prometheus/
    ports:
      - 9090:9090

  grafana:
    image: "grafana/grafana"
    volumes:
      - ./grafana/data:/var/lib/grafana
    ports:
      - 3000:3000

