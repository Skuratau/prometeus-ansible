global:
  scrape_interval: 25s
  scrape_timeout: 15s
  evaluation_interval: 1m
  external_labels:
    role:       'prometheus-server'
    stack:      'test'

rule_files:
  - "./rules/targets.rules"
  - "./rules/host.rules"
  - "./rules/containers.rules"

scrape_configs:
  - job_name: 'nodeexporter'
    scrape_interval: 5s
    static_configs:
    - targets:
#node_exporter_nodes
      - 'localhost:9100'


  - job_name: 'cadvisor'
    scrape_interval: 5s
    static_configs:
    - targets:
#cadvisor_nodes
      - 'cadvisor:8080'


  - job_name: 'prometheus'
    scrape_interval: 10s
    static_configs:
    - targets:
#prometheus_nodes
      - 'localhost:9090'

